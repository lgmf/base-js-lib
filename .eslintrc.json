{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off"
  },
  "plugins": [
    "jest"
  ],
  "overrides": [
    {
      "files": [
        "**/lib/**/*.spec.js"
      ],
      "env": {
        "jest": true
      }
    }
  ]
}